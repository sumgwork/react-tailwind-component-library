{
  "name": "react-tailwind-component-library",
  "version": "0.0.1",
  "description": "React component library powered by TailwindCss",
  "main": "dist/index.js",
  "files": [
    "lib",
    "dist",
    "config.js",
    "README.md"
  ],
  "repository": "https://github.com/sumgwork/react-tailwind-component-library.git",
  "keywords": [
    "react",
    "tailwindcss",
    "componentlibrary",
    "react-tailwind-component-library",
    "designsystem"
  ],
  "author": "Sumit Govil <sumg.work@gmail.com>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist lib && npm run build:ts && npm run build:tailwind && npm run build:lib",
    "build:tailwind": "tailwindcss build style/tailwind.css -o style/output.css -c style/tailwind.config.js",
    "build:lib": "tsc src/themes/default.ts --target esnext --outfile lib/defaultTheme.js --module amd --moduleResolution node",
    "build:ts": "tsc --declaration --declarationMap --emitDeclarationOnly",
    "build": "webpack",
    "cz": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "commit-check": "npm run lint && npm run prettier",
    "changelog": "cz ch"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-storybook": "^0.5.12",
    "eslint-plugin-testing-library": "^5.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "tailwindcss": ">=3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "classnames": "^2.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
