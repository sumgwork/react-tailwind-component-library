{
  "name": "react-tailwind-component-library",
  "version": "0.0.1",
  "description": "React component library powered by TailwindCss",
  "main": "dist/index.js",
  "files": [
    "lib",
    "dist",
    "config.js",
    "README.md"
  ],
  "repository": "https://github.com/sumgwork/react-tailwind-component-library.git",
  "keywords": [
    "react",
    "tailwindcss",
    "componentlibrary",
    "react-tailwind-component-library",
    "designsystem"
  ],
  "author": "Sumit Govil <sumg.work@gmail.com>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist lib && npm run build:ts",
    "build:ts": "tsc --declaration --declarationMap --emitDeclarationOnly",
    "build": "webpack",
    "cz": "git-cz"
  },
  "devDependencies": {
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "tailwindcss": ">=3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "dependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
